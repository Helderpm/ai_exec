    },
    {
      "name": "parallel-investigation",
      "description": "Investigate multiple potential causes simultaneously",
      "applicable": ["uncertain-root-cause", "multiple-symptom", "environment-specific"]
    },
    {
      "name": "hypothesis-driven",
      "description": "Form specific hypotheses and test each systematically",
      "applicable": ["intermittent-issues", "performance-problems", "configuration-problems"]
    }
  ],
  "solutionValidation": {
    "criteria": [
      "resolves-root-cause",
      "maintains-functionality",
      "passes-all-tests",
      "no-regressions",
      "performance-acceptable"
    ],
    "verificationSteps": [
      "unit-test-validation",
      "integration-test-validation",
      "functional-test-validation",
      "performance-benchmarking",
      "regression-testing"
    ]
  },
  "tooling": {
