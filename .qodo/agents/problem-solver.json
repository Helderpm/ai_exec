      "techniques": [
        "dependency-tree-analysis",
        "classpath-inspection",
        "version-conflict-detection",
        "import-statement-verification"
      ],
      "priority-order": ["missing-dependencies", "version-conflicts", "syntax-errors", "type-mismatches"]
    },
    "test-failures": {
      "approach": "test-driven-debugging",
      "techniques": [
        "single-test-isolation",
        "log-analysis",
        "mock-verification",
        "test-environment-check"
      ],
      "priority-order": ["test-configuration", "mock-setup", "context-loading", "assertion-verification"]
    },
    "runtime-errors": {
      "approach": "context-analysis",
      "techniques": [
        "configuration-review",
        "environment-check",
        "dependency-verification",
        "runtime-log-analysis"
      ],
      "priority-order": ["application-properties", "environment-variables", "dependency-versions", "resource-availability"]
    },
    "dependency-issues": {
      "approach": "dependency-graph-analysis",
      "techniques": [
        "mvn-dependency-tree",
        "transitive-dependency-check",
        "version-compatibility-matrix",
        "repository-availability"
      ],
      "priority-order": ["version-conflicts", "missing-dependencies", "exclusion-conflicts", "repository-issues"]
    }
  },
  "debuggingPatterns": [
    {
      "name": "divide-and-conquer",
